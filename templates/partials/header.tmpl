{{define "header"}}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="shortcut icon" href="/public/dist/images/favicon.ico" type="image/x-icon">
        <link rel="icon" href="/public/dist/images/favicon.ico" type="image/x-icon">
        {{if eq .main.config.Core.SiteCompanyName ""}}
        <title>{{.main.config.Core.SiteTitle}} - {{.pageTitle}}</title>
        {{else}}
        <title>{{.main.config.Core.SiteTitle}} - {{.main.config.Core.SiteCompanyName}} - {{.pageTitle}}</title>
        {{end}}
        <link rel="stylesheet" href="/public/dist/styles/normalize.css">
        <link rel="stylesheet" href="/public/dist/styles/main.css">
        <link rel="stylesheet" href="/public/dist/styles/modals.css">
        <link rel="stylesheet" href="/public/dist/styles/font-awesome.css">
        {{range .css}}
        <link rel="stylesheet" href="/public/dist/styles/{{.}}.css">
        {{end}}
    </head>
    <body>
        <header>
            <section class="header-logo-area">
                <div class="logo-wrapper">
                    <a href="/"><img src="/public/dist/images/logo.png"></a>
                </div>
                {{if ne .main.config.Core.SiteTitle ""}}
                <div class="header-title">
                    <a href="/">{{.main.config.Core.SiteTitle}}</a>
                </div>
                {{end}}
            </section>

            {{if ne .main.sessionUser.Username ""}}
            <section class="header-user-profile">
                <span>{{.main.sessionUser.Username}}</span>
                <a href="/logout" class="btn">Logout</a>
            </section>
            {{end}}
        </header>
        <div class="main">
            <div id="flashDiv" class="flash">
                <div id="flashText">{{.main.flashMessage}}</div>
            </div>
{{end}}
