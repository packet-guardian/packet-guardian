{{define "manage"}}
{{template "header" dict "css" (list "device-list" "manage") "main" . "pageTitle" "Device Management"}}
<div class="manager">
    <form class="header-metadata-user">
        <input type="hidden" name="username" value="{{.user.Username}}">

        <div class="controls">
            <section>
                {{if .showAddBtn}}
                <button type="button" name="add-device-btn" class="ok-btn">Add Device</button>
                {{end}}
                {{if and .canDeleteDevice (gt (len .devices) 0)}}
                <button type="button" name="del-selected-btn" class="danger-btn">Delete Selected</button>
                <button type="button" name="del-all-btn" class="danger-btn">Delete All</button>
                {{end}}
            </section>
        </div>
    </form>

    {{template "device-list" dict "main" $}}
</div>
{{template "footer" dict "main" $ "js" (list "manage")}}
{{end}}
