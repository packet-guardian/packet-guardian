{{define "reports-network-pools"}}
{{template "header" dict "css" (list "reports/dhcp-pools") "main" . "pageTitle" "Admin - DHCP Pools Stats"}}
<div class="content">
    <h2>DHCP Pool Statistics</h2>
    <div class="controls">
        <a href="/admin" class="btn">Dashboard</a>
        <a href="/logout" class="btn">Logout</a>
    </div>

    <table class="pool-list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Subnet</th>
                <th>Start</th>
                <th>End</th>
                <th>Registered</th>
                <th>Total</th>
                <th>Active</th>
                <th>Claimed</th>
                <th>Abandoned</th>
                <th>Free</th>
            </tr>
        </thead>

        <tbody>
            {{range .pools}}
            <tr>
                <td>{{.NetworkName}}</td>
                <td>{{.Subnet}}</td>
                <td>{{.Start}}</td>
                <td>{{.End}}</td>
                <td>{{if .Registered}}Yes{{else}}No{{end}}</td>
                <td>{{.Total}}</td>
                <td>{{.Active}}</td>
                <td>{{.Claimed}}</td>
                <td>{{.Abandoned}}</td>
                <td>{{.Free}}</td>
            </tr>
            {{end}}
        </tbody>
    </table>
</div>
{{template "footer"}}
{{end}}
