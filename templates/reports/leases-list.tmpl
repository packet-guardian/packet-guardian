{{define "reports-leases-list"}}
{{template "header" dict "css" (list "reports/leases") "main" . "pageTitle" "Admin - Leases"}}
<div class="content">
    <h2>Lease Report</h2>
    <div class="controls">
        <a href="/admin" class="btn">Dashboard</a>
        <a href="/logout" class="btn">Logout</a>
    </div>

    <table class="network-list">
        <thead>
            <tr>
                <th>Network</th>
                <th>Registered Report</th>
                <th>Unregistered Report</th>
            </tr>
        </thead>

        <tbody>
            {{range .networks}}
            <tr>
                <td>{{title .}}</td>
                <td class="list-center"><a href="/admin/reports/lease-stats?network={{.}}&registered">Registered</a></td>
                <td class="list-center"><a href="/admin/reports/lease-stats?network={{.}}">Unregistered</a></td>
            </tr>
            {{end}}
        </tbody>
    </table>
</div>
{{template "footer"}}
{{end}}
