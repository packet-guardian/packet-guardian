{{define "pageTitle"}}Report - Blacklisted Users{{end}}

{{define "css"}}
{{template "render-css" (list "reports/blk-user")}}
{{end}}

{{define "content"}}
<div class="main-content">
    <div class="controls">
        <a href="/admin/reports" class="btn">Reports</a>
    </div>

    <div class="report">
        <h2>Report - Blacklisted Users</h2>
        <table>
            <tr>
                <th>Username</th>
            </tr>
            {{if eq (len .users) 0}}
            <tr>
                <td>No users blacklisted</td>
            </tr>
            {{else}}
            {{range .users}}
            <tr>
                <td><a href="/admin/manage/user/{{.Username}}">{{.Username}}</a></td>
            </tr>
            {{end}}
            {{end}}
        </table>
    </div>
</div>
{{end}}
